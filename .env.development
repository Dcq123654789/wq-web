# 开发环境配置
# 运行命令: npm run dev

# 环境标识
NODE_ENV=development

# 应用标题（开发环境标识）
APP_TITLE=企业级项目（开发环境）

# API 基础地址
# 使用代理路径（推荐）
# 请求 /api/* 会自动转发到 http://localhost:8080/api/*
API_BASE_URL=/api

# 是否启用 Mock 数据
MOCK_ENABLED=true

# 是否启用错误日志
ERROR_LOG_ENABLED=true

# 是否启用调试模式
DEBUG_ENABLED=true

# 是否显示请求日志
SHOW_REQUEST_LOG=true

# 请求超时时间（开发环境可以设置长一些）
REQUEST_TIMEOUT=60000

# 是否启用热更新
HMR_ENABLED=true

# 是否启用源码映射
SOURCE_MAP=true

# 开发服务器端口
PORT=8000
