# 生产环境配置
# 运行命令: npm run build

# 环境标识
NODE_ENV=production

# 应用标题
APP_TITLE=企业级项目

# API 基础地址（生产环境）
# TODO: 替换为实际的生产环境 API 地址
API_BASE_URL=https://api.example.com

# 是否启用 Mock 数据（生产环境必须关闭）
MOCK_ENABLED=false

# 是否启用错误日志
ERROR_LOG_ENABLED=true

# 是否启用调试模式（生产环境关闭）
DEBUG_ENABLED=false

# 是否显示请求日志（生产环境关闭）
SHOW_REQUEST_LOG=false

# 是否启用错误监控（生产环境建议开启）
MONITOR_ENABLED=true

# 是否启用性能监控（生产环境建议开启）
PERFORMANCE_MONITOR_ENABLED=true

# 请求超时时间（毫秒）
REQUEST_TIMEOUT=30000

# 上传文件大小限制（MB）
UPLOAD_MAX_SIZE=10

# CDN 地址（如果有）
# CDN_URL=https://cdn.example.com

# 静态资源路径
# PUBLIC_PATH=/

# 是否启用 Gzip 压缩
GZIP_ENABLED=true

# 是否启用代码压缩
MINIFY_ENABLED=true

# 是否启用 Tree Shaking
TREE_SHAKING_ENABLED=true

# Sentry 配置（错误监控）
# SENTRY_DSN=your-sentry-dsn
# SENTRY_ENVIRONMENT=production
